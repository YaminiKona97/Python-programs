amount=15000.00 # decimal number
if amount >10000: # condition
  discount=amount*0.3  # calaculate the discount 30% 
elif amount >5000: # using another condition
  discount=amount*0.2
elif amount >1000:
  discount=amount*0.1
else:
  discount=0 
final_amount=discount-amount
print(f"Amount:{amount:.2f}") # using format string 
print(f"Discount:{discount:.2f}")
print(f"final amount:{final_amount:.2f}")
